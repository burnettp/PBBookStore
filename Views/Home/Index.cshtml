@{
}

@model BooksViewModel

<h1>Bookstore</h1>

@foreach (Book x in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <h3>@x.Title</h3>

        <ul>
            <li>Author: @x.Author</li>
            <li>Publisher: @x.Publisher</li>
            <li>Isbn: @x.Isbn</li>
            <li>Classification: @x.Classification</li>
            <li>Category: @x.Category</li>
            <li>Page Count: @x.PageCount</li>
            <li>Price: $@x.Price</li>
        </ul>
    </div>
    <br />
}

<!--
<div page-model="@Model.PageInfo" page-action="Index"></div>
-->

<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
